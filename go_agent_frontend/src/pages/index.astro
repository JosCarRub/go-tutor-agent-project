---
import Layout from '../layouts/Layout.astro';
import ChatWindow from '../components/chat/ChatWindow.astro';
import HeroSection from '../components/sections/HeroSection.astro';
---

<Layout title="Go Tutor Agent - Aprende Go con IA">

  
  <HeroSection />

  <section id="chat-section" class="w-full py-16 sm:py-24 px-4 flex justify-center">
    <ChatWindow apiEndpoint="http://localhost:8080/api/v1/tutor-agent/prompt" />
  </section>


</Layout>

<script>
  const ctaButton = document.getElementById('cta-button');

  if (ctaButton) {
    ctaButton.addEventListener('click', (e) => {
      e.preventDefault();
      
      const targetId = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
      if (!targetId) return;

      const targetElement = document.querySelector(targetId);
      if (targetElement) {
        targetElement.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  }
</script>