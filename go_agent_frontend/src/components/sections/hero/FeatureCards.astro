---
import Card from "../../ui/Card.astro";

const features = [
  {
    title: "Análisis RAG",
    description: "Respuestas enriquecidas con la documentación más actual para una precisión inigualable.",
    icon: `<svg class="h-6 w-6 text-[var(--go-color-dark)]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" /></svg>`
  },
  {
    title: "Sandbox de Código",
    description: "Ejecuta y prueba tu código de Go en un entorno seguro y aislado directamente en el chat.",
    icon: `<svg class="h-6 w-6 text-[var(--go-color-dark)]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>`
  },
  {
    title: "Experto en Concurrencia",
    description: "Domina goroutines y channels con explicaciones claras y ejemplos prácticos.",
    icon: `<svg class="h-6 w-6 text-[var(--go-color-dark)]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>`
  }
];
---
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-2xl mx-auto lg:mx-0" style="animation-delay: 200ms;">
  {features.map(feature => (
    <Card variant="feature" padding="md" rounded="xl">
      <div class="flex flex-col items-center text-center h-full">
        <!-- El icono ahora es parte del contenido, no de la tarjeta en sí -->
        <div class="feature-icon-wrapper">
          <Fragment set:html={feature.icon} />
        </div>
        <h3 class="text-lg font-semibold text-[var(--text-primary)]">{feature.title}</h3>
        <p class="text-sm text-[var(--text-secondary)] mt-2 flex-grow">
          {feature.description}
        </p>
      </div>
    </Card>
  ))}
</div>

<style>
  .feature-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3.5rem; /* 56px */
    height: 3.5rem; /* 56px */
    border-radius: 9999px; /* Círculo perfecto */
    margin-bottom: 1.5rem; /* 24px */
    background-color: var(--go-color);
    box-shadow: 0 4px 12px color-mix(in srgb, var(--go-color) 20%, transparent);
    transition: transform 0.3s ease;
  }

  
  .group:hover .feature-icon-wrapper {
    transform: scale(1.1);
  }
</style>